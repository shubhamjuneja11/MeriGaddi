<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand1"
        android:id="@+id/brand1"
        android:textSize="18dp"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="38dp"
        android:layout_below="@+id/price1"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating:"
        android:textSize="10dp"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand2"
        android:id="@+id/brand2"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/brand1"
        android:layout_toEndOf="@+id/image1" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/image1"
        android:layout_below="@+id/brand1"
        android:layout_alignLeft="@id/brand1"
        android:layout_marginTop="10dp"
         />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        
        android:id="@+id/image2"
        android:layout_below="@+id/brand2"
        android:layout_alignLeft="@id/brand2"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price :"
        android:id="@+id/textView2"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel Variants:"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine:"
        android:id="@+id/textView8"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mileage:"
        android:id="@+id/textView9"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/mileage1" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar3"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/image2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price1"
        android:layout_toRightOf="@id/textView2"
        android:layout_alignLeft="@id/brand1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView3"
        android:text="price2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/mileage2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView2"
        android:text="price1"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/price1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fuel1"
        android:text="Petrol,Diesel,CNG"

        android:layout_above="@+id/textView8"
        android:layout_alignStart="@+id/TextView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fuel2"
        android:layout_above="@+id/textView8"
        android:layout_toEndOf="@+id/image2"
        android:text="Petrol,Diesel,CNG"

        android:layout_alignTop="@+id/fuel1"
        android:layout_alignStart="@+id/TextView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/engine1"
        android:text="engine1"
        android:layout_above="@+id/textView9"
        android:layout_toEndOf="@+id/price1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/engine2"
        android:text="engine1"
        android:layout_alignBottom="@+id/engine1"
        android:layout_alignStart="@+id/fuel2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mileage1"
        android:text="mileage1"
        android:layout_alignTop="@+id/mileage2"
        android:layout_alignStart="@+id/fuel1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mileage2"
        android:text="mileage2"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/ratingBar3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_below="@+id/ratingBar2"
        android:onClick="more"
        android:layout_alignEnd="@+id/ratingBar2"
        android:layout_marginTop="37dp"
        android:text="More.." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More.."
        android:id="@+id/button6"
        android:onClick="more2"
        android:layout_alignTop="@+id/button4"
        android:layout_alignEnd="@+id/ratingBar3" />

</RelativeLayout>